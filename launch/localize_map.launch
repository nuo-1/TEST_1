<launch>

    <!--- Sim Time -->
    <param name="/use_sim_time" value="false" />
    <!--x y z yaw pitch roll or x y z qua-->
    <node pkg="tf" type="static_transform_publisher" name="static_transform_publisher"  args="0 0 0 0 0 0 /map /slam 10" />

    <!--- Run Rviz-->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find lidar_slam)/launch/my.rviz" />

    <node pkg="lidar_slam" type="localize_map" name="localize_map" output="screen">
        <!--文件夹-->
        <param name="path_to_map" value="$(find lidar_slam)/data/finalCloud.pcd" type="str"/>
    </node>

    <arg name="bag" default="/media/qzj/Dataset/slamDataSet/CUMT/result.bag"/>
<!--    output="screen"-->
    <node pkg="rosbag" type="play" name="rosbag" args="--pause --clock $(arg bag) -r 1"/>


</launch>